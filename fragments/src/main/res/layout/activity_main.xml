<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.devstudios.fragments.MainActivity">

    <fragment
        android:id="@+id/fragment_frist"
        android:name="mx.com.devstudios.fragments.FirstFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></fragment>

    <fragment
        android:id="@+id/fragment_second"
        android:name="mx.com.devstudios.fragments.SecondFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></fragment>

    <fragment
        android:id="@+id/fragment_third"
        android:name="mx.com.devstudios.fragments.ThirdFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></fragment>

<FrameLayout
    android:id="@+id/content"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
</FrameLayout>

</LinearLayout>


